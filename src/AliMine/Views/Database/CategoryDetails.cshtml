@model AliMine.Models.Category
@{
    ViewBag.Title = "Категория " + Model.Name;
}

<div class="container-fluid">
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">Категория @Model.Name</div>

        <!-- List group -->
        <ul class="list-group">
            <li class="list-group-item">ID: @Model.Id</li>
            <li class="list-group-item">Name: @Model.Name</li>
            <li class="list-group-item">Description: @Model.Description</li>
        </ul>
    </div>
    <a href="~/Database/Categories" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    
</div>
