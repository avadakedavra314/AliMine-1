@model AliMine.Models.Category
@{
    ViewBag.Title = "Удаление " + Model.Name;
}

<div class="container-fluid">
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">Категория: @Model.Name</div>

        <!-- List group -->
        <ul class="list-group">
            <li class="list-group-item">ID: @Html.DisplayFor(model => model.Id)</li>
            <li class="list-group-item">Name: @Html.DisplayFor(model => model.Name)</li>
            <li class="list-group-item">Description: @Html.DisplayFor(model => model.Description)</li>
        </ul>
    </div>

    <form asp-controller="Database" asp-action="DeleteCategory" method="post">

        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Удалить" />
        </div>
        <a href="~/Database/Categories" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </form>

</div>